<section class="user">
  <%= @user.name %>
  <%= mail_to(@user.email) %>
  <div class="actions">
    <% if current_user?(@user) %>
      <%= link_to "Edit Account", edit_user_path(@user), class: "button" %>
      <%= link_to "Delete Account", @user, method: :delete,
                  data: {confirm: "Are you sure?"},
                  class: "button, delete"
      %>
    <% end %>
    <h3>Registrations</h3>
    <% @registrations.each do |r| %>
      <div class="registration">
        <div class="image">
          <%= link_to image_tag(r.event.image_file), r.event %>
        </div>
        <div class="name">
          <%= link_to r.event.name, r.event %>
        </div>
        <div class="date">
          <%= time_ago_in_words(r.created_at) %>
        </div>
      </div>
    <% end %>
  </div>
</section>