<header>
  <nav>
    <%= link_to image_tag("logo"), root_path %>
    <ul class="left">
      <li>
        <%= link_to "All Events", events_path %>
      </li>
    </ul>
    <ul class="right">
      <% if current_user %>
        <%#= debug(current_user) %>

        <li>
          <%= link_to current_user.name, current_user %>
        </li>
        <%= link_to "SignOut", session_path(current_user.id), method: :delete, class: "button" %>
      <% else %>

        <li>
          <%= link_to "SignIn", new_session_path, class: "button" %>
        </li>
        <li>
          <%= link_to "SignUp", signup_path, class: "button" %>
        </li>
      <% end %>
    </ul>
  </nav>

</header>